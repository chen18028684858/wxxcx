.home_bg{
    width: 100%;
    height: 500rpx;
    background-image: linear-gradient(#8a6af5, #c7b2fb);
    color: white;
    overflow: hidden;
}
.home_bgTop{
    width: 100%;
    height: 180rpx;
    margin-top: 100rpx;
    text-align: center;
    overflow: hidden;
}
.bgTop_title{
    width: 200rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 20rpx auto;
    border-radius: 40rpx;
    background-color: #7662e3;
}
.bgTop_count{
    width: 100%;
    font-size: 48rpx;
    font-weight: 700;
}
.integer{
    width: 100%;
    text-align: center;
}
.decimals{
    display: inline-block;
    font-size: 40rpx;
}

.home_bgBottom{
    width: 100%;
    height: 160rpx;
    margin-top: 40rpx;
    /* background-color: #ccc; */
    position: relative;
}
.bgBottom_item{
    width: 50%;
    text-align: center;
}
.bgBottom_title{
    width: 200rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin: 20rpx auto;
    border-radius: 40rpx;
    background-color: #a489f7;
}
.bgBottom_money{
    font-size: 48rpx;
}
.line{
    width: 1px;
    height: 100rpx;
    background-color: #e8e8e8;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}
.home_content{
    background-color: #fff;
    padding: 20rpx;
    font-size: 28rpx;
}
.content_top{
    margin-bottom: 10rpx;
}
.content_msg{
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #999;
}
.content_dateBox{
    color: #999;
    width: 100rpx;
    position: relative;
}
.content_date{
    text-align: center;
}
.picker_box{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    opacity: 0;
    z-index: 5;
}
.content_bottom{
    padding-top: 10rpx;
    overflow: hidden;
}
.content_item{
    padding-bottom: 10rpx;
}
.content_icon{
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    /* background-color: #ccc; */
    margin-right: 20rpx;
}
.content_info{
    width: calc(100% - 116rpx);
    height: 96rpx;
    border-bottom: 1px solid #e8e8e8;
}
.content_list{
    width: 50%;
    height: 100%;
}
.top_text{
    height: 50%;
    line-height: 48rpx;
}
.commit{
    height: 50%;
    line-height: 48rpx;
}
.mr{
    margin-right: 20rpx;
}
.setColor{
    color: #777777;
}
.no_commit{
    height: 100%;
    line-height: 96rpx;
}
.content_list_money{
    height: 100%;
    line-height: 96rpx;
}
.shouru{
    color: #e4393c;
  }
  
  .zhichu{
    color: #00B26A;
  }
