.bills{
  height: 550px;
}
.billss_bg{
  width: 100%;
  height: 160rpx;
  background-color: #c7b2fb;
}
.bills_box{
  padding: 20rpx;
  position: relative;
  top: -100rpx;
}
.bills_item{
  border-radius: 20rpx;
  background-color: white;
}
.bills_top{
  width: 200rpx;
  text-align: center;
  margin: 0 auto;
  padding: 20rpx 0;
}
.top_box{
  border: 2rpx solid #8a6af5;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
.top_item{
  width: 50%;
  text-align: center;
  font-size: 28rpx;
}
.top_item.active{
  background-color: #c7b2fb;
  color: white;
}
.bills_icons{
  /* padding: 30rpx; */
  padding-top: 40rpx;
}

.icons_item{
  width: 20%;
  text-align: center;
  margin-bottom: 40rpx;
}
.icons_img{
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
  background-color: #e8e8e8;
  

}
.icons_ele{
  transition: all .1s linear;
}
.icons_ele.active{
  transform: scale(1.3);
  color: #c7b2fb;
}
.icons_text{
  font-size: 24rpx;
}
.bills_types{
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.types_title{
  font-size: 28rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}
.types_select{
  font-size: 24rpx;
  padding: 20rpx 0;

}
.types_items{
  width: calc(20% - 20rpx);
  margin: 0 10rpx;
  text-align: center;
  border-radius: 30rpx ;
  background-color: #eee;
  height: 50rpx;
  line-height: 50rpx;

}
.types_items.active{
  background-color: #c7b2fb;
  color: #fff;
}
.bills_info{
  padding: 10rpx ;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.bills_info_item{
  padding: 10rpx 0;
  height: 40rpx;
  line-height: 40rpx;
}
.info_item_title{
  width: 80rpx;
  text-align: center;
  margin-right: 20rpx;
  padding-top: 2rpx;
}
.picker-box{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #808080;
}
.bills_date{
  width: calc(100% - 100rpx) ;
  color: #808080;
}
.bills_btn{
  height: 80rpx;
  background-color: #c7b2fb;
  margin-top: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;

}
.bills_save{
  
  width: 100%;
  height: 100%;
}